{
    "configurations": [
        {
            "type": "java",
            "name": "Launch HiberSpringApplication",
            "request": "launch",
            "mainClass": "hiberspring.HiberSpringApplication",
            "projectName": "hiberspring"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "--timeout",
                "999999",
                "--colors",
                "&{file}"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}